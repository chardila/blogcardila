---
import { siteConfig } from "@/site.config";
import { Icon } from "astro-icon/components";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pt-20 pb-4 text-center align-top font-semibold text-gray-600 sm:text-xs dark:text-gray-400"
>
	<div class="flex flex-col items-center gap-2 sm:flex-row sm:gap-4">
		<div>
			&copy; {siteConfig.author}
			{year}. <a href="https://github.com/chardila/blogcardila" target="_blank"></a>MIT licensed, posts
			<a href="https://creativecommons.org/licenses/by/4.0/deed.en" target="_blank">CC BY-4.0</a>.
		</div>
		<div class="flex items-center gap-3">
			<a class="flex items-center gap-1 text-accent hover:underline" href="/rss.xml" target="_blank">
				<Icon aria-hidden="true" class="h-4 w-4" focusable="false" name="mdi:rss" />
				<span class="text-xs">Posts</span>
			</a>
			<a class="flex items-center gap-1 text-accent hover:underline" href="/notes/rss.xml" target="_blank">
				<Icon aria-hidden="true" class="h-4 w-4" focusable="false" name="mdi:rss" />
				<span class="text-xs">Notes</span>
			</a>
		</div>
	</div>
</footer>
