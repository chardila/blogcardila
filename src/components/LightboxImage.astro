---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	src: ImageMetadata;
	alt: string;
	caption?: string;
	class?: string;
}

const { src, alt, caption, class: className } = Astro.props;
const finalCaption = caption || alt;
---

<Image
	src={src}
	alt={alt}
	data-lightbox=""
	data-lightbox-index="0"
	data-lightbox-alt={alt}
	data-lightbox-caption={finalCaption}
	class={`cursor-zoom-in ${className || ''}`}
/>
