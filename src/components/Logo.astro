---
interface Props {
  size?: number | string;
  class?: string;
}
const { size = 48, class: klass } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 100 100"
  width={size}
  height={size}
  class={klass || ""}
>
  <!-- Left curly brace { -->
  <text
    x="20"
    y="55"
    text-anchor="middle"
    dominant-baseline="middle"
    font-size="60"
    font-family="monospace"
    fill="currentColor"
  >
    {"{"}
  </text>

  <!-- Star in the center -->
  <text
    x="50"
    y="55"
    text-anchor="middle"
    dominant-baseline="middle"
    font-size="50"
    font-family="monospace"
    fill="currentColor"
  >
    â˜…
  </text>

  <!-- Right curly brace } -->
  <text
    x="80"
    y="55"
    text-anchor="middle"
    dominant-baseline="middle"
    font-size="60"
    font-family="monospace"
    fill="currentColor"
  >
    {"}"}
  </text>
</svg>
